generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client-usuarios"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_USUARIOS")
}

model User {
  id        String   @id @default(cuid())
  nome      String
  email     String   @unique
  senha     String
  avatar    String?
  cargo     String?
  status    UserStatus @default(ATIVO)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}


enum UserStatus {
  ATIVO
  INATIVO
}

model AutomationFlow {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model IaAutoReply {
  id        String   @id @default(cuid())
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model IaProfileCompletion {
  id        String   @id @default(cuid())
  profile   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model IaSuggestion {
  id        String   @id @default(cuid())
  suggestion String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
