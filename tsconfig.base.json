{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
  "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "paths": {
      "@ui/*": ["packages/ui/*"],
      "@config/*": ["packages/config/*"]
    }
  }
}