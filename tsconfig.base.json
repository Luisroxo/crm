{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
  "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "paths": {
      "@ui/*": ["packages/ui/*"],
      "@config/*": ["packages/config/*"],
  "@auth": ["packages/auth/dist/index"],
  "@auth/*": ["packages/auth/dist/*"],
      "@crm/auth": ["libs/auth/dist"],
      "@crm/core": ["libs/core/dist"],
      "@/*": [
        "apps/usuarios/src/*"
      ]
    }
  }
}